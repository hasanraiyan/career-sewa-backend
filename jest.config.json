{
  "preset": "@jest/preset-default",
  "testEnvironment": "node",
  "transform": {},
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/tests/**/*.spec.js"
  ],
  "moduleFileExtensions": ["js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/tests/**",
    "!src/examples/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"]
}